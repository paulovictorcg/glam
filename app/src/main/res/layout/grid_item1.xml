<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/pad_3dp"
    app:cardCornerRadius="@dimen/pad_5dp"
    app:cardElevation="@dimen/pad_5dp"
    app:cardPreventCornerOverlap="false"
    android:clickable="true"
    android:foreground="#101030">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/img"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:src="@drawable/on_sale_item1" />

        <TextView
            android:id="@+id/lbl1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/img"
            android:paddingLeft="@dimen/pad_10dp"
            android:paddingRight="@dimen/pad_10dp"
            android:paddingTop="@dimen/pad_10dp"
            android:text="Ally Capellino Frank Brown - Fott Shop 2014"
            android:textColor="@color/main_grey_dk1"
            android:textSize="@dimen/txt_13sp" />

        <LinearLayout
            android:id="@+id/lft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lbl1"
            android:gravity="top|bottom|center_vertical|fill_vertical|center|fill"
            android:paddingBottom="@dimen/pad_10dp"
            android:paddingLeft="@dimen/pad_10dp"
            android:paddingRight="@dimen/pad_10dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:orientation="vertical">

            <TextView
                android:id="@+id/lbl3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="xyz.com"
                android:textColor="@color/main_grey"
                android:textSize="@dimen/txt_12sp" />

            <TextView
                android:id="@+id/lbl2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/pad_10dp"
                android:text="$000-$000"
                android:textColor="#ffff8800"
                android:textSize="@dimen/txt_13sp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/btnAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/lft"
        android:layout_alignRight="@+id/img"
        android:layout_marginBottom="@dimen/pad_15dp"
        android:layout_marginRight="@dimen/pad_10dp"
        android:background="@drawable/button_add" />
    </RelativeLayout>
</android.support.v7.widget.CardView>

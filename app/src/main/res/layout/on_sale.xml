<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <TextView
        android:id="@+id/lbl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/on_sale_top"
        android:gravity="top|bottom|center_vertical|fill_vertical|center|fill"
        android:padding="@dimen/pad_20dp"
        android:text="20%
On Sale"
        android:textColor="@color/white"
        android:textSize="40sp"
        android:textStyle="bold" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/cardList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/lbl"
        android:layout_margin="@dimen/pad_5dp" />

    <Button
        android:id="@+id/fabCart"
        style="@style/btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/cardList"
        android:layout_marginRight="@dimen/pad_10dp"
        android:layout_marginTop="-26dp"
        android:background="@drawable/fab_cart" />
</RelativeLayout>
